{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to server",
        "port": 9229,
        "restart": true,
        "cwd": "${workspaceFolder}/server",
        "skipFiles": [
          "<node_internals>/**",
          "${workspaceFolder}/node_modules/**"
        ],
        "outFiles": ["${workspaceFolder}/server/dist/**/*.js"],
        "sourceMaps": true,
        "resolveSourceMapLocations": [
          "${workspaceFolder}/server/**",
          "!**/node_modules/**"
        ]
      }
    ]
  }